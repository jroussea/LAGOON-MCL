/*
* -------------------------------------------------
*  Nextflow config file for processes options
* -------------------------------------------------
* Defines general paths for input files and
* parameters for your own FLORE analysis
*/

params {
    
    /*
    General parameters
    */
    // Analyzed project name

    projectName = "DarkdinoMCL"
    tmpFile = "$baseDir/darkdino_workdir/tmp"

    // input fasta
    fasta =  ""
    annotation = ""

    pep_colname = ""
    attributes = "v1"

    // json
    columns = ""
    columns_infos = ""

    // other
    concat_fasta = "all_sequences"

    //file_name = "file_2="

    // Output directory
    outdir = "$baseDir/results"

    // diamond database
    diamond_db = "reference" // database

    // diamond blastp option
    diamond = "diamond_alignment.tsv"
    sensitivity = "sensitive"
    matrix = "BLOSUM62"
    evalue = 0.001

    // diamond result
    filter = true
    flt_id = 60
    flt_ov = 80
    flt_ev = 1e-50

    // network

    // igraph 
    run_igraph = false

    // MCL
    run_mcl = false
    I1 = 1.4
    I2 = "null"
    I3 = "null"

    // general parameters used in iggraph and mcl
    max_weight = 350 
    min_cc_size = 1
}


/*
PLEASE DO NOT MODIFY THIS FILE (UNLESS YOU KNOW WHAT YOU DOING)
*/
