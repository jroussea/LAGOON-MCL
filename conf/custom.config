/*
* -------------------------------------------------
*  Nextflow config file for processes options
* -------------------------------------------------
* Defines general paths for input files and
* parameters for your own LAGOON-MCL analysis
*/

params {
    
    /*
    General parameters
    */
    // Analyzed project name

    projectName = "LAGOON-MCL"

    // input fasta
    fasta =  "/home/jeremy/Documents/git_project/DARKDINO_project/LAGOON-MCL/data/transcriptomes/*.fasta" 
    annotation = "/home/jeremy/Documents/git_project/DARKDINO_project/LAGOON-MCL/data/annotations/*.tsv"
    pep_colname = "protein_accession"

    columns_attributes = "analysis-signature_accession,interpro_accession"

    // other
    concat_fasta = "all_sequences"

    information = true
    information_files = "/home/jeremy/Documents/git_project/DARKDINO_project/LAGOON-MCL/data/informations/dinoflagellata_v1.tsv"
    information_attributes = "Database,Phylum,Class,Order,Family,Genus,Species"

    // Output directory
    outdir = "$baseDir/results"

    run_diamond = true

    // diamond database
    diamond_db = "reference" // database

    // diamond blastp option    
    alignment_file = ""
    
    query = 1
    subject = 2
    evalue = 12

    diamond = "diamond_alignment.tsv"
    sensitivity = "sensitive"
    matrix = "BLOSUM62"
    diamond_evalue = 0.001

    // network
    // MCL
    I = "1.4,2,4"
    max_weight = 350 
}


/*
PLEASE DO NOT MODIFY THIS FILE (UNLESS YOU KNOW WHAT YOU DOING)
