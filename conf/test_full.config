/*
* -------------------------------------------------
*  Nextflow config file for processes options
* -------------------------------------------------
* Defines general paths for input files and
* parameters for your own LAGOON-MCL analysis
*/

params {
    
    /*
    General parameters
    */
    // Analyzed project name

    projectName = "LAGOON-MCL"

    // input fasta
    //fasta =  "$baseDir/transcriptome/*.fasta" 
    //annotation = "$baseDir/annotation"
    //fasta =  "$baseDir/tr/*.fasta"
    //annotation = "$baseDir/an"
    fasta =  "$baseDir/test/full/tr_files_test/*.fasta" 
    annotation = "$baseDir/test/full/an_files_test"
    pep_colname = "peptides"
    //pep_colname = "protein_accession"
    //attributes = "v1"

    columns_attributes = "database-identifiant,interproscan"

    /*
	Creation of JSON file for storing information.
	In development.

    // json
    columns = "database,identifiant"
    columns_infos = "identifiant,function_tool,start,end,evalue,interproscan,interproscan_member1,interproscan_member2"
    //columns = "analysis,signature_accession"
    //columns_infos = "signature_description,start_location,stop_location,score,interpro_accession,interpro_description,go_annotation,pathways_annotation"
    //columns = ""
    //columns_infos = ""
    */

    // other
    concat_fasta = "all_sequences"

    // Output directory
    outdir = "$baseDir/results"

    // diamond database
    diamond_db = "reference" // database

    // diamond blastp option
    run_diamond = true
    
    alignment_file = "$baseDir/test/alignment/diamond_alignment_test.tsv"
    
    column_query = 1
    column_subject = 2
    column_id = 3
    column_ov = 4
    column_ev = 12

    diamond = "diamond_alignment.tsv"
    sensitivity = "sensitive"
    matrix = "BLOSUM62"
    diamond_evalue = 0.001

    // diamond result
    filter = true
    identity = "60"
    overlap = "80"
    evalue = "1e-50"
    /*
    flt_id = 60
    flt_ov = 80
    flt_ev = 1e-50
    */
    // network


    // MCL
    run_mcl = true
    I = "1.4,2"
    max_weight = 350 

    // general parameters used in iggraph and mcl
    min_cc_size = 1
}


